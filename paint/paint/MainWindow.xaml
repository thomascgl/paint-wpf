<Window x:Class="paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">

    <Grid Background="#FFC3C3C3">



        <Canvas  Name="paintSurface" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" Margin="989,569,52,52" >
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="1"/>
            </Canvas.Background>
        </Canvas>

        <Border x:Name="border_strumenti" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="886" VerticalAlignment="Center" Width="42" CornerRadius="0,30,30,0">
            <Grid Height="886" VerticalAlignment="Center" Margin="0,0,-1,0" HorizontalAlignment="Right" Width="148">
                <Grid x:Name="grid_strumenti" Height="886" VerticalAlignment="Center" HorizontalAlignment="Left" Width="104" Visibility="Hidden">
                    <WrapPanel x:Name="strumenti_pannello" Height="115" VerticalAlignment="Top" Width="102" HorizontalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,10,0,0">
                        <WrapPanel.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius"  Value="5"/>
                            </Style>
                        </WrapPanel.Resources>
                        <Border x:Name="bordoMatita" BorderThickness="1" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="45" MouseEnter="bordoMatita_MouseEnter" MouseLeave="bordoMatita_MouseLeave">
                            <Border.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"  Value="5"/>
                                </Style>
                            </Border.Resources>
                            <Image x:Name="matita" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="40" Source="/matita.png" MouseDown="matita_MouseDown"/>
                        </Border>
                        <Border x:Name="bordo_testo" BorderThickness="1" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="45" MouseEnter="bordo_testo_MouseEnter" MouseLeave="bordo_testo_MouseLeave">
                            <Border.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"  Value="5"/>
                                </Style>
                            </Border.Resources>
                            <Label Content="A" HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25" FontFamily="Yu Gothic UI Light"/>
                        </Border>

                        <Border x:Name="gomma_border" BorderThickness="1" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="45" MouseEnter="gomma_border_MouseEnter" MouseLeave="gomma_border_MouseLeave">
                            <Border.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"  Value="5"/>
                                </Style>
                            </Border.Resources>
                            <Image HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="40" Source="/gomma.png"/>
                        </Border>
                        <Border x:Name="bordo_secchiello" BorderThickness="1" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="45" MouseEnter="bordo_secchiello_MouseEnter" MouseLeave="bordo_secchiello_MouseLeave">
                            <Border.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius"  Value="5"/>
                                </Style>
                            </Border.Resources>
                            <Image HorizontalAlignment="Center" Height="40" VerticalAlignment="Center" Width="40" Source="/secchiello 2.png"/>
                        </Border>
                        <Label Content="Strumenti" HorizontalAlignment="Center" Height="22" VerticalAlignment="Center" Width="102" Background="Transparent" Foreground="#FFA4A4A4" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center" Height="131" Margin="0,130,0,0" VerticalAlignment="Top" Width="102">
                        <Border BorderThickness="1" Height="40" Width="52">
                            <Ellipse HorizontalAlignment="Center" Height="36" Stroke="Black" VerticalAlignment="Center" Width="36"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="50">
                            <Ellipse HorizontalAlignment="Center" Height="36" Stroke="Black" VerticalAlignment="Center" Width="36"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="34">
                            <Ellipse HorizontalAlignment="Center" Height="30" Stroke="Black" VerticalAlignment="Center" Width="30"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="34">
                            <Ellipse HorizontalAlignment="Center" Height="30" Stroke="Black" VerticalAlignment="Center" Width="30"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="34">
                            <Ellipse HorizontalAlignment="Center" Height="30" Stroke="Black" VerticalAlignment="Center" Width="30"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="34">
                            <Ellipse HorizontalAlignment="Center" Height="30" Stroke="Black" VerticalAlignment="Center" Width="30"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="34">
                            <Ellipse HorizontalAlignment="Center" Height="30" Stroke="Black" VerticalAlignment="Center" Width="30"/>
                        </Border>
                        <Border BorderThickness="1" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="34">
                            <Label Content="+" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Padding="5,0,5,5"/>
                        </Border>
                        <Label Content="Colori" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="102" Padding="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Transparent" Foreground="#FFABA5AC"/>
                    </WrapPanel>
                </Grid>
                <Label x:Name="label_freccia" Content="&gt;" Height="886" VerticalAlignment="Center" Padding="5,5,5,5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="50" FontFamily="Bahnschrift Light" MouseLeftButtonDown="label_freccia_MouseLeftButtonDown" Margin="0,0,5,0" HorizontalAlignment="Right" Width="34"/>
            </Grid>
        </Border>

    </Grid>
</Window>
